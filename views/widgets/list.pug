extends ../base.pug
block content
  h3.titles Widgets
  .row
    each widget in widgets
      #card.col.mybackground
        a.cleanlink(href=`/widgets/${widget.id}`)
          .media-left
            img(src=widget.imageUrl id='wImg')
          .media-body
            h4= widget.item.name
            p= widget.model.type
            p= widget.model.description
            p= widget.model.id

  if !widgets.length
    p No widgets????!!!!???! ... we will get to the bottom of this!

  if nextPageToken
    nav.bg-dark
      ul.pagination
        li.page-item 
          span.badge.badge-secondary
            a.page-link(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More Widgets
