extends ../base.pug

block content
  h3.titles Widget
    small
  div.row.titles
    div.col.min_size
      img(src=widget.imageUrl id='wImg')
    div.col
      h4= widget.item.name
        | &nbsp;
        small designed by #{widget.designer.name||'unknown'}
      h5 Desc. #{widget.model.description||'unknown'}
      p model id. #{widget.model.id||'unknown'}
      small Proudly made by a #{widget.designer.race}
