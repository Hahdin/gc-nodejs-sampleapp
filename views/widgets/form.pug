extends ../base.pug

block content
  h3.titles #{action} 
  p.titles= `Upload your own widget`
  form.needs-validation.titles(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="firstname") First Name
      input.form-control(required type="text", name="firstname", id="firstname", value=widget.name.first)
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="lastname") Last Name
      input.form-control(required type="text", name="lastname", id="lastname", value=widget.name.last)
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="itemName") Item Name
      input.form-control(required type="text", name="itemName", id="itemName", value=widget.item.name)
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="modelId") Model Id
      input.form-control(required type="text", name="modelId", id="modelId", value=widget.model.id)
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="modelType") Model Type
      input.form-control(required type="text", name="modelType", id="modelType", value=widget.model.type)
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="image") Widget Image
      input.form-control(required type="file", name="image", id="image")
      div.valid-feedback Valid
      div.invalid-feedback Please fill out this field.
    .form-group
      label(for="modelDesc") Model Description
      input.form-control(type="text", name="modelDesc", id="modelDesc", value=widget.model.description)
    .form-group
      label(for="designerName") Designer Name
      input.form-control(type="text", name="designerName", id="designerName", value=widget.designer.name)
    .form-group
      label(for="designerRace") Designer Race
      input.form-control(type="text", name="designerRace", id="designerRace", value=widget.designer.race)
    .form-group.sr-only
      label(for="imageUrl") Widget Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=widget.model.img)
    .form-group.sr-only
      label(for="createdBy") Created by
      input.form-control(type="text", name="createdBy", id="createdBy", value=user.displayName)
    .form-group.sr-only
      label(for="createdById") Created by ID
      input.form-control(type="text", name="createdById", id="createdById", value=user.id)
    button.btn.btn-success(type="submit") Upload Widget
